<h2>プロフィール編集</h2>
<%= form_with model: @user do |f| %>
  <label for="inputImage">プロフィール画像</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  <label for="inputName">プロフィール名</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"プロフィール名"%>
  <label for="inputprofile">プロフィール情報</label>
  <%= f.text_field :profile, autofocus: true, id:"inputprofile", placeholder:"プロフィール"%>
  <%= f.submit "変更を保存" %>
<% end %>