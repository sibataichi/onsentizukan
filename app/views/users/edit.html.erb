<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2><strong>プロフィール編集</strong></h2>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <h6>プロフィール画像</h6>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
        <div class="form-group">
          <h6>プロフィール名</h6>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"プロフィール名"%>
        </div>
        <div class="form-group">
          <h6>自己紹介</h6>
          <%= f.text_field :profile, autofocus: true, id:"inputprofile", placeholder:"プロフィール"%>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>