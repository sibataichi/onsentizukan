<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user, class: "user_#{user.id}" %></td>
        <td>
          <%= link_to reject_user_path(id: user.id) do %>
            <%= user.is_valid ? 'BANする' : 'BANから復旧する' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
 <div class="container mt-1">
  <div class="row">
   <div class="col-2 mx-auto">
    <%= paginate @users %>
   </div>
  </div>
 </div>
