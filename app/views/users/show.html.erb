<h1>マイアカウントページ</h1>
<% if @user == current_user || current_user.admin? %>
<%= link_to "退会する", confirm_unsubscribe_path(@user) %>
<% end %>
<div>
  <% if @user.profile_image.attached? %>
  <%= image_tag @user.get_profile_image %>
  <% end %>
  <h3>
    <%= @user.name %>
    <%= render "follow" , user: @user %>
  </h3>
  <h3><%= @user.profile %></h3>
</div>
<% if @user == current_user || current_user.admin? %>
<%= link_to "プロフィール編集", edit_user_path %>
<% end %>


<h1>投稿一覧</h1>
<% @posts.each do |post| %>
<div>
  <% if post.image.attached? %>
  <%= link_to post_path(post.id) do %>
    <%= image_tag post.image, size: "200x200" %>
  <% end %>
  <% end %>
  <p>タイトル：<%= post.title %></p>
  <p>説明：<%= post.body %></p>
</div>
<% end %>
