<% if post.favorited_by?(current_user) %>
<p>
  <%= link_to post_favorites_path(post, post.id), method: :delete do %>
    ♥<%= post.favorites.count %> いいね
  <% end %>
</p>
  <% else %>
<p>
  <%= link_to post_favorites_path(post, post.id), method: :post do %>
    ♡<%= post.favorites.count %> いいね
  <% end %>
</p>
<% end %>