 <%= form_with model: @post do |f| %>
  <div class="form-group">
    <h6>画像</h6>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="form-group">
    <h6>タイトル</h6>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <h6>説明</h6>
    <%= f.text_area :body %>
  </div>
  <div class="form-group">
    <h6>ジャンル</h6>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい", class:'form-control genre_id' %>
  </div>
  <div class="form-group">
    <%= f.label :address, '住所' %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>