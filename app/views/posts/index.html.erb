<div class="container">
 <div class="row">
  <div class="col-lg-5">
  <%= render "searches/form" %>
  </div>
 </div>
 <div class="row">
  <div class="col-xl-6">
    <% @posts.each do |post| %>
      <P><%= post.user.name %></P>
      <% if post.image.attached? %>
       <%= link_to post_path(post) do %>
        <%= image_tag post.image, size: "200x200" %>
       <% end %>
      <% end %>
      <p><%= post.title %></p>
      <p><%= post.body %></p>
    <% end %>
    </div>
  </div>
</div>