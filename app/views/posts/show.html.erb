<h1>投稿詳細画面</h1>
<div>
  <% if @post.image.attached? %>
  <%= image_tag @post.image, size: "200x200" %>
  <% end %>
  <p>タイトル：<%= @post.title%></p>
  <p>説明：<%= @post.body %></p>
  <p>投稿日：<%= @post.created_at.strftime('%Y/%m/%d') %></p>

  <%= render "map", post: @post %>

  <% if @post.user == current_user %>
    <%= link_to "投稿を編集する", edit_post_path %>
    <%= link_to "投稿を削除する", post_path(@post), method: :delete %>
  <% end %>

  <div id="post_<%= @post.id %>">
    <%= render "favorites/favorite", post: @post %>
  </div>
</div>

<%= render "comment", post: @post, comment: @comment %>