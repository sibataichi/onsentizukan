<h1>投稿詳細画面</h1>
<div>
  <%= image_tag @post.image, size: "200x200" %>
  <p>タイトル：<%= @post.title%></p>
  <p>説明：<%= @post.body %></p>
  <p>投稿日：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
</div>

<% if @post.user == current_user %>
  <%= link_to "投稿を編集する", edit_post_path %>
  <%= link_to "投稿を削除する", post_path(@post), method: :delete %>
<% end %>

<div>
  <p>コメント件数：<%= @post.comments.count %></p>
  <% @post.comments.each do |comment| %>
    <p><%= image_tag comment.user.get_profile_image %></p>
    <%= comment.user.name %>
    <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
    <% if comment.user == current_user %>
      <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete %>
    <% end %>
  <% end %>
</div>
<div>
  <%= form_with model: [@post, @comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>