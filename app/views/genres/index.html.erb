 <div class="container">
  <div class="genre-index">
    <div class="row">
      <h3 class="bg-light">ジャンル一覧・追加</h3>
    </div>
    <div class="row mt-3">
      <%= form_with model: @genre, local:true do |f| %>
        <h4>
          ジャンル名
          <%= f.text_field :name %>
          <%= f.submit :"新規登録",  class: 'btn btn-success' %>
        </h4>
      <% end %>
    </div>
    <div class="row mt-4">
      <table class="table table-hover">
        <thead class="thead-light">
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
      　<% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td>
            <%= link_to edit_genre_path(genre.id), class: "btn btn-sm btn-success" do %>
            編集する
            <% end %>
          </td>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>